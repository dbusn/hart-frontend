{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "./",
    "types": [
      "webpack-env",
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "es7",
      "dom",
      "dom.iterable",
      "scripthost",
      "es2017"
    ]
  },
  "include": [
    "src/**/**/*",
    "src/**/*",
    "tests/**/*"
  ],
  "files": [
    "src/shims-vue.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
